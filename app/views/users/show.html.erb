<!DOCTYPE html>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg"><table class="table">
        <table class="table">
          <tbody>
            <tr>
              <th>画像</th>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class='row'>
          <% if @user.id == current_user.id %>
            <%= link_to "", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_37261" %>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @newBook, local:true do |newBook| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= newBook.text_field :title, class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= newBook.text_area :body, class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <%= newBook.submit '投稿', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Book</h2>
        <table class="table">
          <thead>
            <% @books.each do |books| %>
              <tr>
                <th>画像</th>
                <th><%= books.title %></th>
                <th><%= books.body %></th>
                <td><a class="btn btn-sm btn-success edit_book_29522" href="/books/29522/edit">Edit</a></td>
                <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_29522" rel="nofollow" data-method="delete" href="/books/29522">Destroy</a></td>
              </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</main>